<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#433BA9"
    tools:context=".MbtiPersonalities">

    <LinearLayout
        android:id="@+id/backlinearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#433BA9">

        <Button
            android:id="@+id/backToInfoBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#433BA9"
            android:drawableLeft="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:paddingTop="10dp"
            android:text="MBTI"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/headerlinearlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/backlinearlayout"
        android:layout_centerInParent="true"
        android:layout_margin="30dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/mbtiCircleImageView"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginEnd="10dp" />

        <LinearLayout
            android:id="@+id/titlelinearlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mbtiId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ENFJ"
                android:textColor="@color/white"
                android:textSize="45dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/subMbtiId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The Teacher"
                android:textColor="#FF9900"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>


    <ScrollView
        android:id="@+id/scrollViewId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerlinearlayout">

        <LinearLayout
            android:id="@+id/infolinearlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="5dp"
                android:justificationMode="inter_word"
                android:lineSpacingExtra="6sp"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="5dp"
                android:justificationMode="inter_word"
                android:text="Strengths"
                android:textColor="#FF9900"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/strengthId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="5dp"
                android:justificationMode="inter_word"
                android:lineSpacingExtra="6sp"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="5dp"
                android:justificationMode="inter_word"
                android:text="Weaknesses"
                android:textColor="#FF9900"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/weaknessId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="5dp"
                android:justificationMode="inter_word"
                android:lineSpacingExtra="6sp"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="5dp"
                android:justificationMode="inter_word"
                android:text="At Work"
                android:textColor="#FF9900"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/atworkId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="5dp"
                android:justificationMode="inter_word"
                android:lineSpacingExtra="6sp"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="5dp"
                android:justificationMode="inter_word"
                android:text="Top Careers"
                android:textColor="#FF9900"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/topcareerId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="5dp"
                android:justificationMode="inter_word"
                android:lineSpacingExtra="6sp"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>


</RelativeLayout>